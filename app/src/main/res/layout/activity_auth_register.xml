<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="item"
            type="com.leap.mini.interactor.auth.usecase.RegisterRequest" />

        <variable
            name="presenter"
            type="com.leap.mini.presentation.auth.RegisterActivity.Presenter" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_height"
            android:background="@color/text_white">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:contentDescription="@null"
                android:onClick="@{()->presenter.onBack()}"
                android:paddingLeft="15dp"
                android:src="@mipmap/ic_global_back" />
        </LinearLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/register_and_free_use"
                        android:textColor="@color/theme"
                        android:textSize="@dimen/large_large_text_size" />
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">

                    <com.leap.mini.widget.cleartextfield.ClearTextField
                        android:id="@+id/phone_et"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        app:edit_errMsg="@string/register_phone_empty"
                        app:edit_hint="@string/register_phone_hint"
                        app:edit_inputType="phone"
                        app:edit_maxLength="11"
                        app:edit_text_size="@dimen/normal_text_size"
                        app:label_layout_width="100dp"
                        app:label_text="手机号"
                        app:label_text_color="@color/text_black"
                        app:label_text_size="@dimen/normal_text_size" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="16dp"
                        android:background="@color/line" />


                    <com.leap.mini.widget.cleartextfield.ClearTextField
                        android:id="@+id/real_name_et"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        app:edit_errMsg="@string/register_real_name_empty"
                        app:edit_hint="@string/register_name_hint"
                        app:edit_maxLength="8"
                        app:edit_text_size="@dimen/normal_text_size"
                        app:label_layout_width="100dp"
                        app:label_text="您的姓名"
                        app:label_text_color="@color/text_black"
                        app:label_text_size="@dimen/normal_text_size" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="16dp"
                        android:background="@color/line" />

                    <com.leap.mini.widget.cleartextfield.ClearTextField
                        android:id="@+id/password_et"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        app:edit_errMsg="@string/register_password_empty"
                        app:edit_hint="@string/register_password_hint"
                        app:edit_inputType="password"
                        app:edit_maxLength="16"
                        app:edit_text_size="@dimen/normal_text_size"
                        app:label_layout_width="100dp"
                        app:label_text="密码"
                        app:label_text_color="@color/text_black"
                        app:label_text_size="@dimen/normal_text_size" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="16dp"
                        android:background="@color/line" />

                    <com.leap.mini.widget.cleartextfield.ClearTextField
                        android:id="@+id/repeat_password_et"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        app:edit_errMsg="@string/register_repeat_phone_empty"
                        app:edit_hint="@string/register_repeat_password_hint"
                        app:edit_inputType="password"
                        app:edit_maxLength="16"
                        app:edit_text_size="@dimen/normal_text_size"
                        app:label_layout_width="100dp"
                        app:label_text="确认密码"
                        app:label_text_color="@color/text_black"
                        app:label_text_size="@dimen/normal_text_size" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="16dp"
                        android:background="@color/line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.leap.mini.widget.cleartextfield.ClearTextField
                            android:id="@+id/code_et"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_weight="1"
                            app:edit_errMsg="@string/register_code_empty"
                            app:edit_hint="@string/register_auth_code_hint"
                            app:edit_inputType="number"
                            app:edit_maxLength="6"
                            app:edit_text_size="@dimen/normal_text_size"
                            app:label_layout_width="100dp"
                            app:label_text="短信验证码"
                            app:label_text_color="@color/text_black"
                            app:label_text_size="@dimen/normal_text_size" />

                        <com.leap.mini.widget.CountTimeTextView
                            android:id="@+id/send_code_ct"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:onClick="@{()->presenter.onGetCode()}"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:text="@string/register_get_auth_code"
                            android:textColor="@color/theme"
                            android:textSize="@dimen/middle_text_size" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="16dp"
                        android:background="@color/line" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="40dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:onClick="@{()->presenter.onAgreement()}"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/agree_cb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:checked="false" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/register_read_and_agree"
                            android:textColor="@color/text_warm"
                            android:textSize="@dimen/middle_text_size" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        android:onClick="@{()->presenter.onReadAgreement()}"
                        android:text="@string/register_qianfan_agreement"
                        android:textColor="@color/link"
                        android:textSize="@dimen/middle_text_size" />
                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="20dp"
                    android:onClick="@{()->presenter.onRegister()}"
                    android:text="@string/register"
                    android:textColor="@color/white"
                    android:textSize="@dimen/large_text_size" />
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>
</layout>